---
import data from '@/content/group.json';

const externalSiteUrl = "http://alma.karlov.mff.cuni.cz/sanda/";
---

<div class="mt-4">
    <a 
    href={externalSiteUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center px-0 py-2 citrus-link transition-colors text-xs"
    >
        Open in New Tab
        <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
    </a>
</div>

<!-- Iframe for Original Site -->
<div class="border border-gray-300 dark:border-gray-600 rounded-lg overflow-hidden" style="height: 600px;">
    <iframe 
    src={externalSiteUrl}
    width="100%" 
    height="100%"
    title="Personal Website"
    class="w-full h-full"
    ></iframe>
</div>

